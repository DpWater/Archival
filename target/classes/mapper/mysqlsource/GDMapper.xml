<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jiuqi.archival.mapper.mysqlsource.GDMapper">
    <insert id="insertDataByTableName">

    </insert>
    <select id="doSql" resultType="java.util.List">
        ${sql} limit 1000
    </select>
    <select id="getTableNames" resultType="java.lang.String">
        SELECT table_name
        FROM information_schema.tables
        WHERE table_schema = database();
    </select>
    <select id="getTotalNum" resultType="java.lang.Integer">
        select count(*) from ${tableName}
    </select>
    <select id="selectDataByTableNameAndIndex" resultType="java.util.Map">
        select * from ${tableName} order by ${index} desc limit ${startIndex},${endIndex}
    </select>
    <select id="getTableDesc" resultType="com.jiuqi.archival.vo.GDColumn">
        DESCRIBE test_tenmill;
    </select>
    <select id="isTableExist" resultType="java.lang.Integer">
        SELECT count(*)
        FROM information_schema.tables
        WHERE table_name = #{tableName} LIMIT 1;
    </select>

</mapper>